<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yeojun.asday1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#493334">

            <TextView
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="친구"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="579"
                android:textSize="20dp"
                android:textColor="#fae900"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/friends"
                />

            <ImageView
                android:id="@+id/more_vert"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_more_vert_white_48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search_white_48dp"
                android:layout_toLeftOf="@+id/more_vert"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f2f2f5">

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_people_black_48dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_chat_bubble_black_48dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_dvr_black_48dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_more_horiz_black_48dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="내 프로필"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/profile1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/apeach"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="여준"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile1"
                android:layout_marginLeft="17dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="추천친구"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/profile2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tube"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="새로운 친구를 만나보세요!"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile2"
                android:layout_marginLeft="17dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="친구"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/profile3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ryan"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="가성현"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile3"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/profile4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ryan"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="가재희"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile4"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/profile5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ryan"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="가준호"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile5"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/profile6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ryan"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="강상호"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile6"
                android:layout_marginLeft="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#999999" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
